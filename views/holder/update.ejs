<!-- Update holder -->

<%- partial('../partials/header')%>

<div class="container">
  <div class="page-header"><%= i18n(actionResult) %></div>

	<form class="form-horizontal" action="/holder/update/<%= holder.id %>" method="post">
		<fieldset>

			<legend><%= i18n('Edit holder') %></legend>
			<div class="control-group">
			  <label class="control-label" for="input_name"><%= i18n('Name') %> (<%= i18n('required') %>)</label>
			  <div class="controls">
			    <input id="input_name" name="input_name" type="text" placeholder="John Doe" class="input-xlarge" value="<%= holder.name %>"></input>
			  </div>
			</div>

			<div class="control-group">
			  <label class="control-label" for="input_email"><%= i18n('Email') %> (<%= i18n('required') %>)</label>
			  <div class="controls">
			    <input id="input_email" name="input_email" type="text" placeholder="john.doe@example.com" class="input-xlarge" value="<%= holder.email %>"></input>
			  </div>
			  <div class="controls">
			    <input id="input_email_valid" name="input_email_valid" type="checkbox" class="input-xlarge" value="email_is_not_valid" <%= holder.emailValid ? '' : 'checked' %>><%= i18n('This address is not in use') %></input>
			  </div>
			</div>

			<div class="control-group">
			  <div class="controls">
			    <button id="input_submit" name="input_submit" class="btn btn-primary"><%= i18n('Save') %></button>
			  </div>
			</div>

		</fieldset>
	</form>

</div>

<%- partial('../partials/footer')%>