<%- partial('../partials/header')%>


<div class="container">
  <div class="page-header"><%= i18n(actionResult) %></div>

    <form class="form-horizontal" action="destroy" method="post">
    <fieldset>

      <legend><%= i18n('Remove user') %></legend>

      <div class="control-group">
        <label class="control-label" for="input_id"><%= i18n('Name') %></label>
        <div class="controls">
          <select id="input_id" name="input_id" class="form-control">
            <% _.each(users, function (u) { %>
              <option value="<%= u.id %>"><%= u.username %></option>
            <% }) %>            
          </select>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <button id="input_submit" name="input_submit" class="btn btn-primary"><%= i18n('Remove user') %></button>
        </div>
      </div>

    </fieldset>
  </form>
</div>



<%- partial('../partials/footer') %>